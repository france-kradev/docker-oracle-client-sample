{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "ES2018",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node"],
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
